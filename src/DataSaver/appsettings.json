{
  "AllowedHosts": "*",

  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimulLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\ASP_course\\DataSaverDemo\\src\\Logs\\log.txt",
          "outputTemplate": "{Timestamp:G} {Message}{Newline:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\ASP_course\\DataSaverDemo\\src\\Logs\\log.json",
          "formatter":  "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ]
  }
}
