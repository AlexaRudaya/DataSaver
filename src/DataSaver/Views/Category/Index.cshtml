@using DataSaver.ApplicationCore.ViewModels
@model IEnumerable<CategoryViewModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h4>Categories list:</h4>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-info">
                Create a category
                <i class="fas fa-plus"></i>
            </a>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count() > 0)
{
  <ul class="list-group">

            @foreach (var item in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @item.Name
                <span class="btn-group">
                    <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-outline-info">
                                Edit
                    </a>
                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                Delete
                    </a>
                </span>
                </li>
            }
</ul>
}
else
{
    <p>Category list is empty</p>
}
