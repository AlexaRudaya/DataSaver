@using DataSaver.ApplicationCore.ViewModels
@model IEnumerable<CategoryViewModel>
    
        <div class="row row-cols-2 pt-4">
            <div class="col-10">
                <h4><strong>Categories list:</strong></h4>
            </div>
            <div class="col-2">
                <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-info">
                    Create a category
                </a>
            </div>
        </div>

    <br />

    @if (Model.Count() > 0)
    {
        <ul class="list-group-item-primary">

            @foreach (var item in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @item.Name
                    <span class="btn-group">
                        <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-outline-info">
                            Edit
                        </a>
                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-outline-danger">
                            Delete
                        </a>
                    </span>
                </li>
            }
        </ul>
    }

    else
    {
        <p>Category list is empty</p>
    }