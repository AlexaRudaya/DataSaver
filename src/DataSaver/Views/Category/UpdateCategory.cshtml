@using DataSaver.ApplicationCore.ViewModels
@model CategoryViewModel

<form method="post" asp-controller="Category" asp-action="UpdateCategory">
    <input asp-for="Id" hidden />
    <div class="border p-2">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row-3">
            <h2>Update category name:</h2>
            <p></p>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-8">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class=" form-control" />
                        <span asp-validation-for="Name" class=" text-danger"></span>
                    </div>
                </div>
                <p></p>
                <p></p>
                <div class="form-group row p-2">
                    <div class="col-8 offset row">
                        <div class="col">
                            <input type="submit" class="btn btn-success" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-dark">
                                Go Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

