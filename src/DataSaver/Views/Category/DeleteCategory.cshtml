@using DataSaver.ApplicationCore.ViewModels
@model CategoryViewModel

<form method="post" asp-controller="Category" asp-action="DeleteCategory">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h4 class="text-info pl-3">Category for removing:</h4>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-8">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class=" form-control" />
                    </div>
                </div>
                <p></p>
                <div class="form-group row p-3">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class=" btn btn-danger w-50">Do you really wanna delete it?</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

