@using DataSaver.ApplicationCore.ViewModels
@model CategoryViewModel

<form method="post" asp-controller="Category" asp-action="CreateCategory">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h4>New category creation:</h4>
        </div>

        <div class="col-8">
        <div class="form-group">
            <label asp-for="Name" class="form-label mt-4">Name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter a name">
            <span asp-validation-for="Name" class=" text-danger"></span>

        <div class="form-group row p-3">
            <div class="col-8 offset-4 row">
                <div class="col-4">
                    <input type="submit" class="btn btn-info w-50" value="Create" />
                </div>
                <div class="col-4">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-dark w-50">
                        Back
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </div>
      </div>
     </div>
    </div>
</form>