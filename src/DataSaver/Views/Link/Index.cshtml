@using DataSaver.ApplicationCore.ViewModels
@model IEnumerable<LinkViewModel>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info pl-3">Link list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Link" asp-action="Create" class="btn btn-info">
                Create
                <i class="fas fa-plus"></i>
            </a>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Url
                </th>
                <th>
                    Category
                </th>
                <th>
                    Topic
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        <a href=@item.UrlLink>@item.UrlLink</a>
                    </td>
                    @*<td>
                        @item.Category!.Name
                    </td>
                    <td>
                        @item.Topic!.Name
                    </td>*@
                    <td class="text-center">
                        <div class="w-25 btn-group" role="group">
                            <a asp-controller="Link" asp-route-id="@item.LinkId" asp-action="Update" class="btn btn-secondary">
                                Edit
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" asp-controller="Link" asp-action="Delete" asp-route-id="@item.LinkId">
                                <input type="submit" class="btn btn-danger w-100" value="Delete" />
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <p>Category list is empty</p>
}
